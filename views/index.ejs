<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Lista de Autos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-4">
  <h1 class="mb-4">Autos en Venta</h1>
  <a href="/crear" class="btn btn-success mb-3">+ Nuevo Auto</a>
  <table class="table table-bordered table-striped">
    <thead class="table-dark">
      <tr>
        <th>Marca</th><th>Modelo</th><th>Año</th><th>Precio</th>
        <th>Color</th><th>Transmisión</th><th>Estado</th><th>Acciones</th>
      </tr>
    </thead>
    <tbody>
    <% autos.forEach(auto => { %>
      <tr>
        <td><%= auto.marca %></td>
        <td><%= auto.modelo %></td>
        <td><%= auto.año %></td>
        <td>$<%= auto.precio %></td>
        <td><%= auto.color %></td>
        <td><%= auto.transmision %></td>
        <td><%= auto.estado %></td>
        <td>
          <a href="/editar/<%= auto.id %>" class="btn btn-sm btn-primary">Editar</a>
          <a href="/eliminar/<%= auto.id %>" class="btn btn-sm btn-danger" onclick="return confirm('¿Eliminar auto?')">Eliminar</a>
        </td>
      </tr>
    <% }) %>
    </tbody>
  </table>
</body>
</html>