<h1>Editar Auto</h1>
<form action="/editar/<%= auto.id %>" method="POST">
  Marca: <input name="marca" value="<%= auto.marca %>"><br>
  Modelo: <input name="modelo" value="<%= auto.modelo %>"><br>
  Año: <input type="number" name="año" value="<%= auto.año %>"><br>
  Precio: <input type="number" step="0.01" name="precio" value="<%= auto.precio %>"><br>
  Color: <input name="color" value="<%= auto.color %>"><br>
  Transmisión: 
  <select name="transmision">
    <option <%= auto.transmision === 'Manual' ? 'selected' : '' %>>Manual</option>
    <option <%= auto.transmision === 'Automática' ? 'selected' : '' %>>Automática</option>
  </select><br>
  Estado: 
  <select name="estado">
    <option <%= auto.estado === 'Disponible' ? 'selected' : '' %>>Disponible</option>
    <option <%= auto.estado === 'Vendido' ? 'selected' : '' %>>Vendido</option>
  </select><br>
  <button>Actualizar</button>
</form>
<a href="/">Volver</a>